@model Bug_tracker.Models.Tickets

@{
    ViewBag.Title = "Details";
}
@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            $('#wer').DataTable();
        });
    </script>
}
<div id="page-wrapper">
    <h2>Details</h2>

    <div>
        <h4>Tickets</h4>
        <hr />
        <dl class="dl-horizontal">

            <dt>
                Project
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Project.Name)
            </dd>

            <dt>
                TicketPriority
            </dt>

            <dd>
                @Html.DisplayFor(model => model.TicketPriority.Name)
            </dd>

            <dt>
                TicketStatus
            </dt>

            <dd>
                @Html.DisplayFor(model => model.TicketStatus.Name)
            </dd>

            <dt>
                TicketType
            </dt>

            <dd>
                @Html.DisplayFor(model => model.TicketType.Name)
            </dd>

            <dt>
                Name

            </dt>

            <dd>
                @Html.DisplayFor(model => model.Name)
            </dd>

            <dt>
             Description
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Description)
            </dd>

            <dt>
               Created
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Created)
            </dd>

            <dt>
                Updated
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Updated)
            </dd>


        </dl>
        <div>
            <div class="row">
                <div class="col-md-6">
                    <h3> Comment on this Ticket</h3>
                    <div>
                        @using (Html.BeginForm("CreateComment", "Tickets", new { id = Model.Id }, FormMethod.Post))
                        {
                            <div class="row">
                                <div class="col-md-10">
                                    <input type="hidden" name="slug" value="@Model.Comments" />
                                    <textarea name="Body"></textarea>
                                    @if (ViewBag.ErrorMessage != null)
                                    {
                                        <span>@ViewBag.ErrorMessage</span>
                                    }
                                </div>
                                <div class="col-md-5">
                                    <input type="submit" value="submit" />
                                </div>
                            </div>
                        }
                    </div>
                    <div>
                        @foreach (var comment in Model.Comments)
                        {
                            <hr />
                            @comment.User.Name
                            <p style="text-align: left; margin-left: 70px">
                                @comment.Comment
                            </p>
                        }
                    </div>
                </div>
                <div class="col-md-6">
                    <h3> Attachments </h3>
                    <div>
                        @using (Html.BeginForm("CreateAttachment", "Tickets", new { ticketId = Model.Id }, FormMethod.Post, new { enctype = "Multipart/form-data" }))
                        {
                            <div class="row">
                                @Html.AntiForgeryToken()
                                <div class="col-md-6">
                                    <input name="image" type="file" class="form-control" id="fileUpload" />
                                    @if (ViewBag.ErrorMessage != null)
                                    {
                                        <span>@ViewBag.ErrorMessage</span>
                                    }
                                </div>
                                <div class="col-md-6">
                                    <input type="submit" value="submit" />
                                </div>
                            </div>
                        }
                    </div>
                    <div>
                        @foreach (var attachment in Model.Attachments)
                        {
                            <hr />
                            @attachment.User.Name
                            <p style="text-align: left; margin-left: 70px">
                                <img class="img-responsive" src="@attachment.FilePath" alt="">
                                <span style="font-size: 10px; text-align: right">             
                                    - @attachment.Created.ToString("dd/mm/yyyy hh:mm")
                                </span>
                            </p>
                        }
                    </div>
                </div>
            </div>
            <p>
                @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
                @Html.ActionLink("Back to List", "Index")
            </p>
            <h3 style="text-align:center"> History </h3>
            <div>
                <hr/>
                <table id="wer" class="table">
                    <thead>
                        <tr>
                            <th>
                                Property Changed
                            </th>
                            <th>
                                Old Value
                            </th>
                            <th>
                                New Value
                            </th>
                            <th>
                                Changed
                            </th>
                            <th>
                                Modifier
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var history in Model.Histories)
                        {
                            <tr>
                                <td>
                                    @history.Property
                                </td>
                                <td>
                                    @history.OldValue
                                </td>
                                <td>
]                                    @history.NewValue
                                </td>
                                <td>
                                    @history.Changed
                                </td>
                                <td>
                                    @history.User.Name
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

</div>
</div>